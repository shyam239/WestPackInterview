package utils;

import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStream;
import java.util.Properties;

public class ReadPropertiesFiles {
	
	public String getLog4JCongirationFile(String searchFor) {
		Properties prop=new Properties();
			try {
			InputStream input=new FileInputStream("src/test/resource/configfiles/Log4j.properties");
			prop.load(input);
		} catch (IOException e) {
			e.printStackTrace();
		}
		return prop.getProperty(searchFor);
	}

}
